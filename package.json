{
  "name": "komento",
  "manifestVersion": 1,
  "displayName": "Komento",
  "id":"komento",
  "description": "A lightweight VSCode extension that adds meaningful JSDoc comments to your JS/TS files with just a click. Built for developers who value clarity and efficiency. ðŸŽ¯",
  "version": "1.0.6",
  "license": "MIT",
  "publisher": "Komento",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "public/komento-simple.png",
  "galleryBanner": {
    "color": "#f5a623",
    "theme": "dark"
  },
  "homepage": "https://github.com/akshay-rajput/komento",
  "keywords": [
    "JSDoc",
    "developer tools",
    "code documentation"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "komento.generateJSDocComments",
        "title": "Generate JSDoc comment âœ¨"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "komento.generateJSDocComments",
          "when": "editorLangId == 'javascript' || editorLangId == 'typescript'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "docker-names": "^1.2.1",
    "dotenv": "^16.4.7",
    "uuid": "^11.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akshay-rajput/komento.git"
  }
}
